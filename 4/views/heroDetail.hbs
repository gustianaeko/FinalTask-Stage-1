<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hero Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <style>
      .active { font-weight: bolder; } .form-label { font-weight: bold; } body {
      background-color: rgba(21, 153, 214, 0.658); } .btn-secondary:hover {
      background-color: orange; transition: 0.5s; }
    </style>
  </head>
  <body>
    <!-- navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="/assets/images/valorant-logo-rmzbp5pf734ug6jk.jpg"
            style="width: 50px; margin-left: 20px; margin-right: 20px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link me-3" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="hero">
                Hero Detail</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="type">Add Type</a>
            </li>
          </ul>
          <div class="d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item">
                  <a class="nav-link fw-bold active text-danger">Hello,
                    {{user}}</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              {{/if}}
            </ul>

          </div>
        </div>
      </div>
    </nav>

    <!-- end navbar -->

    <!-- hero details -->

    <div
      class="detailCard"
      style="border: 6px solid black; margin: 80px; border-radius: 15px;"
    >

      <div style="margin: 50px; text-align: center;">
        <h1>{{heroById.name}}</h1>
      </div>
      <div class="contentDetail">
        <div class="upper">
          <div class="leftDetail" style="text-align: center;">
            <img
              src="/uploads/{{heroById.photo}}"
              alt="projectImage"
              style="width: 700px; border-radius: 15px; "
            />
          </div>
        </div>
        <div class="bottom">
          <div
            class="description"
            style="margin-top: 15px; text-align: center; margin-bottom: 15px"
          >
            <h2>
              Hero Type :
              {{heroById.Type}}
            </h2>
          </div>
        </div>
      </div>
    </div>
    <!-- end -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>