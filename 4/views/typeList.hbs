<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Type List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .active { font-weight: bolder; } .form-label { font-weight: bold; } body {
      background-color: rgba(21, 153, 214, 0.658); } .btn-secondary:hover {
      background-color: orange; transition: 0.5s; }
    </style>
  </head>
  <body>
    <!-- navbar -->

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="/assets/images/valorant-logo-rmzbp5pf734ug6jk.jpg"
            style="width: 50px; margin-left: 20px; margin-right: 20px"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a
                class="nav-link me-3"
                aria-current="page"
                href="/home"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="hero">Add Hero</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="type">Add Type</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="typeList"
              >Type List</a>
            </li>
          </ul>

          <div class="d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item">
                  <a class="nav-link fw-bold active text-danger">Hello,
                    {{user}}</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              {{/if}}
            </ul>

          </div>

        </div>
      </div>
    </nav>

    <!-- end navbar -->

    <main>
      {{#if messages.success}}
        <div class="alert alert-success" role="alert">
          <div class="container">
            {{messages.success}}
          </div>
        </div>
      {{/if}}

      <div
        class="myTypeList"
        style="background-color: rgb(248, 249,250); margin: 40px; text-align: center; padding: 40px; border-radius: 15px;  box-shadow: 2px 4px 8px rgb(102, 102, 102)"
      >
        <div>

          <h1>Heroes Type List</h1>
        </div>
        <div>
          {{#if isLogin}}
            <a href="type" class="btn btn-secondary" style="float: right;">Add
              New Type</a>
          {{/if}}
        </div>

        <!-- My Heroes Type List-->
        <div
          class="myHeroesTypeList"
          style="background-color: rgb(248, 249,250); padding-top; 10px; "
        >
          <div class="container my-5">
            <div class="row">
              {{#each data}}
                <!-- Start of Card -->
                <div class="col-md-4 mb-4 mt-4">
                  <div
                    class="card"
                    style="box-shadow: 2px 4px 8px rgb(102, 102, 102)"
                  >
                    <img
                      src="/assets/images/valorant logo black.jpg"
                      class="card-img-top"
                      alt="Hero Image"
                      style="height: 270px;"
                    />
                    <div class="card-body">
                      <h5 class="card-title">
                        <a
                          href="/heroDetail/{{this.id}}"
                          style="text-decoration: none; color: black; font-weight: bold;"
                        >
                          {{this.name}}
                          {{!-- {{this.createdAt}} --}}
                        </a>
                      </h5>
                      <div class="d-flex justify-content-center mb-3">
                        <h3>{{this.Type}}</h3>
                        <p>

                        Type Code For Create Hero -:- <span>
                        <strong> {{this.id}} </strong>
                        </p>
                      </div>
                      <div class="d-flex justify-content-end">
                        {{#if this.isLogin}}
                          <button class="btn btn-secondary me-3"><a
                              href="/editType/{{this.id}}"
                              style="text-decoration: none;
                            color: white"
                            >Edit</a></button>
                          <button class="btn btn-danger"><a
                              href="/deleteType/{{this.id}}"
                              style="text-decoration: none;
                            color: white;"
                            >
                              Delete</a></button>
                        {{/if}}
                      </div>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>

        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>